@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000" style="height: 400px; width:1024px">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.jpg" alt="Building" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Limitless Paper in a Paperless World
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.jpg" alt="Address" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner3.jpg" alt="Office" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    All kinds of paper, and all kinds of people. Contact us!
                    <a class="btn btn-default" href="~/Home/Contact">
                        Contact now
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>What we sell</h2>
        <ul>
            <li>Paper</li>
            <li>Love</li>
            <li>Commitment</li>
            <li>Consumer happines</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>How we do it</h2>
        <p>
            Getting a better customer service? Yeah, that's us. Not going into Stapples? Yeah, you need us.
        </p>
    </div>
    <div class="col-md-3">
        <h2>What you can buy</h2>
        <ul>
            <li>Acid-free paper</li>
            <li>Artist’s paper</li>
            <li>Copy & copier paper</li>
            <li>Food paper</li>
            <li>Kraft paper</li>
            <li>Printing paper</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Disclaimer</h2>
        <p>
            The incident with the paper with d*** was solved. We don't know how it happened, probably Toby's fault.
        </p>
    </div>
</div>
